<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>Sign Up for RealShopping!</h1>

      <div class="row">
        <div class="col-md-8">
          <form method="POST" action="/users">
            <div class="form-group">
              <label for="username">Username:</label>
              <input type="text" name="username" placeholder="Enter Username" class="form-control"/>
              <small class="text-muted" id="usernameHelp">username must be at least 2 characters in length</small>
            </div>
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
              <small class="text-muted" id="emailHelp">email address must be a valid address</small>
            </div>
            <div class="form-group">
              <label for="password">Password:</label>
              <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
              <small class="text-muted" id="passwordHelp"> password must match confirmation below and be at least 6 characters in length</small>
            </div>
            <div class="form-group">
              <label for="passwordConfirmation">Password:</label>
              <input type="password" name="passwordConfirmation" placeholder="Enter Password confirmation" class="form-control"/>
            </div><br/>
            <input type="submit" value="Sign Up" class="btn btn-primary"/>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
